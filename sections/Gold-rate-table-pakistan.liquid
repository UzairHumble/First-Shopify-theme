{% schema %}
{
  "name": "Gold rate table pak",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ],
  "presets": [
    {
      "name": "Gold rate table pak",
      "category": "Custom"
    }
  ]
}
{% endschema %}


<!-- custom-section.liquid -->
<section class="custom-section">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}

    <p>{{ section.settings.description }}</p>
    
    <div class="custom-content">
      <!-- Add any custom HTML or dynamic content here -->
  <div id="gold-rates-section" class="gold-rates-container">
  <h2>Gold Rates in Pakistan</h2>
  <table border="1" id="gold-rates-table" style="width: 100%; text-align: center; border-collapse: collapse;">
    <thead>
      <tr>
        <th>Gold Purity</th>
        <th>24K</th>
        <th>22K</th>
        <th>20K</th>
        <th>18K</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Tola</td>
        <td id="tola-24k">-</td>
        <td id="tola-22k">-</td>
        <td id="tola-20k">-</td>
        <td id="tola-18k">-</td>
      </tr>
      <tr>
        <td>10 Gram</td>
        <td id="gram10-24k">-</td>
        <td id="gram10-22k">-</td>
        <td id="gram10-20k">-</td>
        <td id="gram10-18k">-</td>
      </tr>
      <tr>
        <td>1 Gram</td>
        <td id="gram1-24k">-</td>
        <td id="gram1-22k">-</td>
        <td id="gram1-20k">-</td>
        <td id="gram1-18k">-</td>
      </tr>
    </tbody>
  </table>
</div>

<script>
  async function fetchGoldRates() {
    try {
      const response = await fetch('YOUR_API_ENDPOINT', {
        headers: {
          'Authorization': 'Bearer YOUR_API_KEY'
        }
      });

      if (response.ok) {
        const data = await response.json();

        // Assuming the API response contains gold rates in PKR
        const rates = data.rates;

        // Update Tola prices
        document.getElementById('tola-24k').textContent = rates['tola_24k'];
        document.getElementById('tola-22k').textContent = rates['tola_22k'];
        document.getElementById('tola-20k').textContent = rates['tola_20k'];
        document.getElementById('tola-18k').textContent = rates['tola_18k'];

        // Update 10 Gram prices
        document.getElementById('gram10-24k').textContent = rates['10gram_24k'];
        document.getElementById('gram10-22k').textContent = rates['10gram_22k'];
        document.getElementById('gram10-20k').textContent = rates['10gram_20k'];
        document.getElementById('gram10-18k').textContent = rates['10gram_18k'];

        // Update 1 Gram prices
        document.getElementById('gram1-24k').textContent = rates['1gram_24k'];
        document.getElementById('gram1-22k').textContent = rates['1gram_22k'];
        document.getElementById('gram1-20k').textContent = rates['1gram_20k'];
        document.getElementById('gram1-18k').textContent = rates['1gram_18k'];
      } else {
        console.error('Error fetching gold rates:', response.statusText);
      }
    } catch (error) {
      console.error('Error:', error);
    }
  }

  // Fetch gold rates every second
  setInterval(fetchGoldRates, 1000);
  fetchGoldRates();
</script>


      
    </div>
  </div>
</section>

<style>
  .custom-section {
    padding: 50px 0;
    background-color: #f9f9f9;
  }
  .custom-section h2 {
    text-align: center;
    margin-bottom: 20px;
  }
</style>



