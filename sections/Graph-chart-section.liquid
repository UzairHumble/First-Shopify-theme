{% schema %}
{
  "name": "Graph chart Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ],
  "presets": [
    {
      "name": "Grap chart Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}


<!-- custom-section.liquid -->
<section class="custom-section">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}

    <p>{{ section.settings.description }}</p>
    
    <div class="custom-content">
      <!-- Add any custom HTML or dynamic content here -->
      <div class="bg-white border border-warning mt-3 p-3">
              
                 <div class="row px-2 mt-3"> 
                    <div class="col-lg-4 px-3">
                        <div class="portal">
                            <div class="portal_icon"><i class="fa fa-th-large fa-3x" aria-hidden="true"></i></div>
                            <h3 title="1 Tola Gold Rate">1 Tola Gold Rate</h3>
                            <p>1 tola gold rate on <time datetime="20 Jan, 2025">20 Jan, 2025</time> is <strong>Rs. 285,000.000</strong></p> 
                            <strong class="badge badge-warning rounded-0 text-white mt-2 font-weight-bold font-18" style="font-size:20px">Rs. 285,000.000</strong> 
                        </div> 
                    </div>
                    <div class="col-lg-4 px-3">
                        <div class="portal">
                            <div class="portal_icon"><i class="fa fa-th-large fa-3x" aria-hidden="true"></i></div>
                            <h3 title="10 Gram Gold Rate">10 Gram Gold Rate</h3>
                            <p>10 gram gold rate on <time datetime="20 Jan, 2025">20 Jan, 2025</time> is <strong>Rs. 244,350.000</strong></p> 
                            <strong class="badge badge-warning rounded-0 text-white mt-2 font-weight-bold font-18" style="font-size:20px">Rs. 244,350.000</strong> 
                        </div>  
                    </div>
                    <div class="col-lg-4 px-3">
                        <div class="portal">
                            <div class="portal_icon"><i class="fa fa-th-large fa-3x" aria-hidden="true"></i></div>
                            <h3 title="1 Gram Gold Rate">1 Gram Gold Rate</h3>
                            <p>1 gram gold rate on <time datetime="20 Jan, 2025">20 Jan, 2025</time> is <strong>Rs. 24,435.000</strong></p> 
                            <strong class="badge badge-warning rounded-0 text-white mt-2 font-weight-bold font-18" style="font-size:20px">Rs.  24,435.000</strong> 
                        </div> 
                    </div>  
                </div> 
                
                <p class="mt-2">Gold rate per Tola in Pakistan today is <b>Rs 285,000.000</b> on <b>20 Jan, 2025.</b> </p>
                                <p class="mt-2">1 gram of 24k Gold was being sold at <b>Rs 24,435.000</b> and 10 grams of 24K Gold were being traded for <b>Rs  244,350.000.</b></p>
            </div>
    </div>
  </div>
</section>

<style>
  .custom-section {
    padding: 50px 0;
    background-color: #f9f9f9;
  }
  .custom-section h2 {
    text-align: center;
    margin-bottom: 20px;
  }
</style>



